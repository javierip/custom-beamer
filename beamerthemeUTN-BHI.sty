% Default theme as a base
\usetheme{default}

%colors
\definecolor{verdeUTN}{rgb}{0.796,0.827,0.0}
\definecolor{grisUTN}{rgb}{0.462,0.459,0.466}

%backgound
\usebackgroundtemplate{\includegraphics[width=\paperwidth,height=\paperheight]{theme/utn-bhi-page}}

% Font
% \renewcommand\sfdefault{phv}
% \renewcommand\familydefault{\sfdefault}
%\setbeamerfont{title}{size=\Huge}
%\setbeamerfont{frametitle}{size=\huge}
\setbeamercolor{frametitle}{bg=white, fg=verdeUTN}
\setbeamercolor{title}{bg=white, fg=verdeUTN}
\setbeamercolor{normal text}{bg=white, fg=grisUTN}

% Structure
\setbeamertemplate{items}[circle]
\setbeamercolor{structure}{fg=grisUTN}
\setbeamercolor{item}{fg=grisUTN}
\setbeamercolor{itemize item}{fg=verdeUTN}
\setbeamercolor{itemize subitem}{fg=verdeUTN}
\setbeamercolor{itemize subsubitem}{fg=verdeUTN}

% Features
\setbeamertemplate{headline}{}
\setbeamertemplate{navigation symbols}{}
\setbeamertemplate{footline}{}
