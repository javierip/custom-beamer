% Default theme as a base
\usetheme{default}

%colors
\definecolor{greenUTN}{rgb}{0.796,0.827,0.0}
\definecolor{grayUTN}{rgb}{0.462,0.459,0.466}

%backgound
\usebackgroundtemplate{\includegraphics[width=\paperwidth,height=\paperheight]{theme/utn-bhi-page}}

% Font
\setbeamercolor{frametitle}{bg=white, fg=greenUTN}
\setbeamercolor{title}{bg=white, fg=greenUTN}
\setbeamercolor{normal text}{bg=white, fg=grayUTN}

% Structure
\setbeamertemplate{items}[circle]
\setbeamercolor{structure}{fg=grayUTN}
\setbeamercolor{item}{fg=grayUTN}
\setbeamercolor{itemize item}{fg=greenUTN}
\setbeamercolor{itemize subitem}{fg=greenUTN}
\setbeamercolor{itemize subsubitem}{fg=greenUTN}

% Features
\setbeamertemplate{headline}{}
\setbeamertemplate{navigation symbols}{}
\setbeamertemplate{footline}{}
